<table class='table'>
  <tr><%= attachment_image_tag(user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg") %></tr>
  <tr>
	  <th>name</th>
	  <th><%= user.name %></th>
  </tr>
  <tr>
	  <th>introduction</th>
	  <th><%= user.introduction %></th>
	</tr>
	<tr>
	  <th>follows</th>
	  <th><%= link_to user.follower.count, relationship_follow_index_path(user.id) %></th>
	</tr>
	<tr>
	  <th>followers</th>
	  <th><%= link_to user.followed.count, relationship_follower_index_path(user.id) %></th>
	</tr>
</table>

<% if user == current_user %>
	<div class='row'>
	  <%= link_to '',edit_user_path(user),class: "btn btn-outline-secondary btn-block fas fa-user-cog edit_user_#{user.id}" %>
	</div>
<% end %>
